  pod 'GlidingCollection'

  pod 'Alamofire'
  pod 'JKCalendar'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'FirebaseUI/Storage'

